<h1>Listing investors</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Email</th>
      <th>Ssn</th>
      <th>Password</th>
      <th>Password confirmation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investors.each do |investor| %>
      <tr>
        <td><%= investor.first_name %></td>
        <td><%= investor.middle_name %></td>
        <td><%= investor.last_name %></td>
        <td><%= investor.phone_number %></td>
        <td><%= investor.street_address %></td>
        <td><%= investor.city %></td>
        <td><%= investor.state %></td>
        <td><%= investor.zip %></td>
        <td><%= investor.email %></td>
        <td><%= investor.ssn %></td>
        <td><%= investor.password %></td>
        <td><%= investor.password_confirmation %></td>
        <td><%= link_to 'Show', investor %></td>
        <td><%= link_to 'Edit', edit_investor_path(investor) %></td>
        <td><%= link_to 'Destroy', investor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

